# 服务端口
PORT=3001

# MySQL 配置
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=feishu_moments

# JWT 密钥
JWT_SECRET=your_jwt_secret_change_this

# 飞书应用配置（在飞书开放平台创建应用后获取）
FEISHU_APP_ID=your_app_id
FEISHU_APP_SECRET=your_app_secret

# 上传文件存储路径
UPLOAD_DIR=./uploads

# 应用访问地址（用于消息卡片跳转链接）
APP_URL=https://your-domain.com
